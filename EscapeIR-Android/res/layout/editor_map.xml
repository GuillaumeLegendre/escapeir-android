<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ImageView
  	    android:id="@+id/mapImageEditor"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:contentDescription="@string/playButton"
         />

	<LinearLayout
    	android:layout_width="fill_parent"
   	 	android:layout_height="fill_parent"
	 	android:gravity="center"
	 	android:layout_weight="1"
    	android:orientation="vertical" >
    	
	    <TextView
            android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:layout_marginBottom="100dp"
	        android:fontFamily="@style/AppBaseTheme"
	        android:text="@string/chooseMap"
		/>
	    <Button 
	        android:id="@+id/map1Button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
		  	android:layout_gravity="center"
		    android:text="@string/map1"
		    android:onClick="onPushButton"
	    />
	    <Button 
	        android:id="@+id/map2Button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
		    android:text="@string/map2"
		    android:onClick="onPushButton"
	    />
	    <Button 
	        android:id="@+id/map3Button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
		    android:text="@string/map3"
		    android:onClick="onPushButton"
	    />
	    <Button 
	        android:id="@+id/nextButton"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center|bottom"
		    android:text="@string/next"
		    android:onClick="onPushButton"
	    />
    </LinearLayout>
    
</LinearLayout>