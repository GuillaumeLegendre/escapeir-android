<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/level1">
    
	<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:layout_gravity="top"
    android:orientation="horizontal"
    android:weightSum="30" >
    <ImageButton
        android:id="@+id/default_ship_button"
        android:contentDescription="@string/shipButton"
	    android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="5"
		android:src="@drawable/default_ship"
		android:background="@android:color/darker_gray"
		android:layout_margin="5dp"
	/>
    <ImageButton
        android:id="@+id/bat_ship_button"
        android:contentDescription="@string/shipButton"
	    android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="5"
		android:src="@drawable/bat_ship"
		android:layout_margin="5dp"
		android:background="@android:color/darker_gray"
	/>
    <ImageButton
        android:id="@+id/kamikaze_ship_button"
        android:contentDescription="@string/shipButton"
	    android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="5"
		android:layout_margin="5dp"
		android:src="@drawable/kamikaze_ship"
		android:background="@android:color/darker_gray"
	/>
    <ImageButton
        android:id="@+id/first_boss_button"
        android:contentDescription="@string/shipButton"
	    android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="5"
		android:layout_margin="5dp"
		android:src="@drawable/first_boss"
		android:background="@android:color/darker_gray"
	/>
    <ImageButton
        android:id="@+id/second_boss_button"
        android:contentDescription="@string/shipButton"
	    android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_margin="5dp"
		android:layout_weight="5"
		android:src="@drawable/second_boss"
		android:background="@android:color/darker_gray"
	/>
    <ImageButton
        android:id="@+id/third_boss_button"
        android:contentDescription="@string/shipButton"
	    android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_margin="5dp"
		android:layout_weight="5"
		android:src="@drawable/third_boss"
		android:background="@android:color/darker_gray"
	/>
    </LinearLayout>

	
	
	<LinearLayout
    	android:layout_width="fill_parent"
   	 	android:layout_height="50dp"
	 	android:layout_gravity="bottom"
	 	android:orientation="horizontal" >    	
	    <ListView 
	        android:id="@+id/move_list_editor"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_gravity="left"
	        android:layout_weight="15"
    	></ListView>
     	<ListView 
        	android:id="@+id/shoot_list_editor"
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:layout_gravity="right"
        	android:layout_weight="15"
    	></ListView>
    </LinearLayout>
    
</LinearLayout>