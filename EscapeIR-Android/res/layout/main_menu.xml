<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/main_menu"
    android:orientation="vertical" >
    
    <Button
        android:id="@+id/PlayButton"
        android:contentDescription="@string/playButton"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginLeft="50dp"
		android:layout_marginRight="50dp"
		android:text="Play"
		android:onClick="launchGame"
	/>
    <ImageButton
        android:id="@+id/EditorButton"
        android:contentDescription="@string/editorButton"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:src="@drawable/editor_button"
		android:background="@null"
		android:onClick="launchEditor"
	/>

</LinearLayout>